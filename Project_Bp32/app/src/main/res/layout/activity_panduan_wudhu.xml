<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".PanduanWudhuActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/title_panduan"
        android:layout_width="641dp"
        android:layout_height="560dp"
        android:layout_marginTop="170dp"
        android:adjustViewBounds="true"
        android:src="@drawable/panduan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/pengertian_button"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-450dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/ppengertian"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_panduan" />

    <ImageButton
        android:id="@+id/batal_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-450dp"
        android:layout_marginEnd="75dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/pbatal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_panduan" />

    <ImageButton
        android:id="@+id/kapan_button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="-10dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/pkapan"
        app:layout_constraintStart_toStartOf="@id/pengertian_button"
        app:layout_constraintTop_toBottomOf="@id/pengertian_button" />

    <ImageButton
        android:id="@+id/air_button"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-75dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/pair"
        app:layout_constraintEnd_toEndOf="@id/batal_button"
        app:layout_constraintTop_toBottomOf="@id/batal_button" />

    <ImageButton
        android:id="@+id/amalan_button"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-80dp"
        android:layout_marginStart="-48dp"
        android:layout_marginEnd="-75dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/pamalan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/kapan_button" />

</androidx.constraintlayout.widget.ConstraintLayout>