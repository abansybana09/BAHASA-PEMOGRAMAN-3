                <TextView android:id="@+id/translation_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/baloo" android:gravity="center" android:text="Artinya: Aku niat berwudhu untuk menghilangkan hadas kecil, fardhu karena Allah Ta'ala." android:textColor="@android:color/white" android:textSize="14sp" android:textStyle="bold|italic"/>
