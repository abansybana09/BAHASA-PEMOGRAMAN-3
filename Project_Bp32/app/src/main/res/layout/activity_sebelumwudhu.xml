            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <!-- Stroke Layer -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/baloo" android:gravity="center" android:text="&quot;Nawaitul wudhuu-a liraf'il hadatsil ashghari fardhal lillaahi ta'aalaa&quot;" android:textColor="#004C41" android:textSize="16sp" android:textStyle="bold|italic" android:translationX="1.5dp"/>
