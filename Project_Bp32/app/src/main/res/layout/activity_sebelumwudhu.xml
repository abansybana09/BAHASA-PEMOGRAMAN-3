            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <!-- Stroke Layer -->
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/baloo" android:gravity="center" android:text="Artinya: Aku niat berwudhu untuk menghilangkan hadas kecil, fardhu karena Allah Ta'ala." android:textColor="#004C41" android:textSize="14sp" android:textStyle="bold|italic" android:translationX="1.5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/baloo" android:gravity="center" android:text="Artinya: Aku niat berwudhu untuk menghilangkan hadas kecil, fardhu karena Allah Ta'ala." android:textColor="#004C41" android:textSize="14sp" android:textStyle="bold|italic" android:translationX="-1.5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="@font/baloo" android:gravity="center" android:text="Artinya: Aku niat berwudhu untuk menghilangkan hadas kecil, fardhu karena Allah Ta'ala." android:textColor="#004C41" android:textSize="14sp" android:textStyle="bold|italic" android:translationY="1.5dp"/>
